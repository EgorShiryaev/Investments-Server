{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "example"
  ]
}
